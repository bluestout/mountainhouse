.menu a,
.menu a:visited,
.menu a:active,
#header span.menu_title,
.menu a span,
select.currencies,
.mini_cart span {
  font-family: Helvetica, 'Helvetica Neue', Arial, 'Lucida Grande', sans-serif;
  font-weight: bold;
}

.caption {
  .headline {
    font-family: 'American Captain';
  }
  .subtitle {
    font-family: 'CocogooseNarrow';
  }
  .pretext {
    font-family: {{ settings.regular__font.family }}, {{ settings.regular__font.fallback_families }};
    font-weight: {{ settings.regular__font.weight }};
    font-style: {{ settings.regular__font.style }};
  }
}
p {
  &.subtitle {
    font-family: 'CocogooseNarrow';
    font-size: 16px;
    letter-spacing: 1.06px;
    max-width: 590px;
    margin: 0 auto;
  }
}
a.button, .button, button, input[type="submit"], input[type="reset"], input[type="button"], .action_button, a.action_button, input.action_button[type="submit"], input.action_button[type="button"], input.action_button[type="button"], button.shopify-payment-button__button.shopify-payment-button__button--unbranded {
  font-family: 'Cocogoose';
  font-weight: 300;
  letter-spacing: 1.72px;
  min-height: 38px;
  height: 38px;
  min-width: 219px;
}
a.highlight-false, input[type="button"].highlight-false, a.highlight-true, input[type="button"].highlight-true, a.continue-button {
  background-color: {{ settings.banner_button_color }};
  border-color: {{ settings.banner_button_color }};
  color: #FFF;
  &:hover {
    background-color: {{ settings.btn_hover_color }};
    border-color: {{ settings.btn_hover_color }};
    color: #FFF;
  }
}

.homepage-slideshow a.highlight-false:hover, .homepage-slideshow input[type="button"].highlight-false:hover, .homepage-slideshow a.highlight-true:hover, .homepage-slideshow input[type="button"].highlight-true:hover {
  color: #FFF;
}

.header {
  .nav {
    .menu {
      li {
        padding-right: 50px;
        &.search_container {
          padding-right: 0;
        }
      }
    }
  }
}

.homepage-slideshow,
.testimonial-section {
  .flickity-prev-next-button {
    width: 80px;
    height: 90px;
    background: #FFF;
    bottom: 0;
    top: auto;
    min-width: auto;
    opacity: 1;
    svg {
      width: 56px;
      height: 56px;
      path {
        fill: #000;
      }
    }
    &.next {
      svg {
        left: 0;
      }
    }
    &.previous {
      right: 79px;
      left: auto;
      svg {
        path {
          transform: translate(20px, 35px);
        }
      }
    }
  }
  .flickity-page-dots {
    width: 13px;
    right: 20px;
    height: auto;
    top: 50%;
    transform: translateY(-50%);
    bottom: auto;
    .dot {
      width: 13px;
      height: 13px;
      background: transparent;
      border: 1px solid #fff;
      border-radius: 50%;
      margin: 5px 0;
      opacity: 1 !important;
      &.is-selected {
        background: #FFF;
      }
    }
  }
}
.transparentBackground--false .flickity-prev-next-button .arrow {
  fill: #000;
}
.video__slideshow {
  .gallery-cell {
    width: 95%;
    margin-right: 10px;
    .caption {
      max-width: 100%;
      .caption-content {
        max-width: 520px;
        position: relative;
        .headline {
          color: {{ settings.regular_color }};
        }
        .pretext {
          color: {{ settings.regular_color }};
          font-size: {{ settings.regular_font_size }}px;
        }
        &:before {
          content: "";
          position: absolute;
          width: 11px;
          height: 66px;
          background: #BA0C2F;
          left: -11px;
          top: 5px;
        }
      }
      .video_overlay {
        width: 50%;
        text-align: center;
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        a {
          img {
            max-width: 68px;
            display: inline-block;
          }
          span {
            display: inline-block;
            vertical-align: top;
            text-align: left;
            top: 13px;
            left: 10px;
            color: #fff;
            line-height: 1.5em;
            letter-spacing: 3.48px;
            strong {
              font-family: 'Cocogoose';
              font-size: 18px;
              font-weight: 400;
              letter-spacing: 1px;
            }
          }
        }
      }
    }
  }
  .flickity-prev-next-button {
    height: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 50px;
    svg {
      left: 0;
    }
    &.previous {
      left: 0;
      right: auto;
      svg {
        path {
          transform: translate(10px, 20px);
        }
      }
    }
    &.next {
      svg {
        position: absolute;
        left: -10px;
        top: 14px;
      }
    }
  }
}
a.button {
  &.donation_button {
    display: inline-block;
    height: 102px;
    background: url({{ 'donations_btn_bg.png' | asset_url }}) no-repeat;
    width: 339px;
    border: 0;
    .count {
      font-family: 'American Captain';
      font-size: 45px;
      letter-spacing: 9px;
      color: #fff;
      display: block;
      margin-top: 10px;
    }
    font-family: 'CocogooseNarrow';
    font-size: 18px;
  }
}
.newsletter {
  .input-row {
    position: relative;
    input {
      &.contact_email[type="email"] {
        width: 354px;
        max-width: 100%;
        height: 50px;
        max-height: 50px;
        border: 1px solid #D2D2D2;
        box-shadow: 0 18px 15px -20px rgba(0,0,0,0.17);
      }
      &.sign_up {
        position: absolute;
        right: 6px;
        height: 38px;
        width: 120px;
        min-width: 0;
        top: 6px;
      }
    }
  }
}

.collection-list-section {
  background: #FAFAFA;
  .list-collections {
    .thumbnail {
      background: #FFF;
      padding-bottom: 25px;
      .product-wrap {
        .collection-info__caption {
          .subtitle {
            text-transform: uppercase;
          }
          .content {
            padding-left: 20px;
            padding-right: 20px;
          }
        }
      }
      &.even {
        margin-top: 20px;
      }
    }
  }
}
