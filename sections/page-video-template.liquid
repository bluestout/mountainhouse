<div id="page-blog-section">
    {% if section.settings.show_banner and section.settings.header_banner_image != blank %}
        {% include 'page-brand'%}
    {% endif %}
    
    {% assign items_per_row = section.settings.item_per_row %}

    {% assign page = 0 %}
    <div class="container video-content">  
        <div class="filter">
            <label>Filter By </label>
            <select class="select-filter">
              <option value="all" selected>All Videos</option>
              {% assign blocks_str = '' %}
              {% for block in section.blocks %}
                  {% assign blocks_str = blocks_str | append : block.settings.tags | append: ',' %}
              {% endfor %}
              {% assign blocks = blocks_str | split: ',' | uniq %}
              {% for block in blocks %}
                {% assign val = block | replace: ' ', '_' %}
                <option value="{{val}}">{{block}}</option>
              {% endfor %}
            </select>
        </div>
        <div class="sixteen columns" data-blog-size="" style="padding: 20px 0px;">
            {% if section.blocks.size >0 %}
                {% for block in section.blocks %}
                    {% assign page =  page | plus: 1 %}
                    {% assign class = block.settings.tags | replace: ' ', '_' | replace: ',', ' ' %}
                    {% if page > section.settings.blog_posts_per_page %}
                        <div class="{{ class }} video-item blogBox moreBox {% if items_per_row == 2 %}eight columns{% elsif items_per_row == 3 %}one-third column{% else %}four columns{% endif %} article medium-down--one-whole" style="display: none;">
                            <p class="sub_title" style="margin-top: 20px;">
                                <a href="{{ block.settings.item_url }}">{{ block.settings.item_title }}</a>
                            </p>
                            {% if block.settings.item_image != blank %}
                                <a href="{{ block.settings.item_url  }}">
                                    {% include 'image-element', image: block.settings.item_image, back_to_image:true %}
                                    <div class="video_overlay">
                                        <a href="javascript:;" class="play">
                                            <img src="{{ 'play_btn.png' | asset_url }}">
                                            <span>WATCH<br><strong>Intro Video</strong></span>
                                        </a>
                                    </div>
                                </a>
                            {% endif %} 
                        </div> 
                    {% else %}
                        <div class="{{ class }} video-item blogBox moreBox {% if items_per_row == 2 %}eight columns{% elsif items_per_row == 3 %}one-third column{% else %}four columns{% endif %} article medium-down--one-whole" >
                            <p class="sub_title" style="margin-top: 20px;">
                                <a href="{{ block.settings.item_url }}">{{ block.settings.item_title }}</a>
                            </p>
                            {% if block.settings.item_image != blank %}
                                <a href="{{ block.settings.item_url  }}">
                                    {% include 'image-element', image: block.settings.item_image, back_to_image:true %}
                                    <div class="video_overlay">
                                        <a href="javascript:;" class="play">
                                          <img src="{{ 'play_btn.png' | asset_url }}">
                                          <span>WATCH<br><strong> Video</strong></span>
                                        </a>
                                        {% include 'popup-video-slide' pop_video: block%}
                                    </div>
                                </a>
                            {% endif %}
                        </div>
                    {% endif %}
                    
                    
                {% endfor %} 
                <div id="loadMore">
                    <a href="#">Load More</a>
                </div> 
            {% endif %}
        </div>
    </div>
</div>
{% schema %}
{
    "name"  : "Content section",
    "class" : "blog-section",
    "max_blocks": 20,
    "settings"  : [
        {
            "type": "header",
            "content": "Header banner"
        },
        {
            "type": "checkbox",
            "id": "show_banner",
            "label": "Feauture heading banner",
            "default": true
        },
        {
            "type": "image_picker",
            "id": "header_banner_image",
            "label": "Header banner",
            "info": "2048 x 415px recommended"
        },
        {
        "type": "checkbox",
        "id": "image_darken",
        "label": "Darken image",
        "default": false
        },
        {
        "type": "select",
        "id": "collection_title_position",
        "label": "Collection title position",
        "options": [
            {
            "value": "left",
            "label": "Left"
            },
            {
            "value": "center",
            "label": "Center"
            },
            {
            "value": "right",
            "label": "Right"
            }
        ]
        },
        {
            "type": "image_picker",
            "id": "header_banner_icon",
            "label": "Banner icon"
        },
        {
        "type": "checkbox",
        "id": "display_collection_title",
        "label": "Display caption title"
        },
        {
            "type": "checkbox",
            "id": "display_collection_content",
            "label": "Display caption content"
        },
        {
        "type": "select",
        "id": "text_align",
        "label": "Text alignment",
        "options": [
            {
            "value": "left",
            "label": "Left"
            },
            {
            "value": "center",
            "label": "Center"
            },
            {
            "value": "right",
            "label": "Right"
            }
        ],
        "default": "center"
        },
        {
        "type": "checkbox",
        "id": "caption_background_transparency",
        "label": "Enable text background transparency"
        },
        {
        "type": "color",
        "id": "cap_bg_color",
        "label": "Caption background color"
        },
        {
        "type": "color",
        "id": "cap_title_color",
        "label": "Caption title color"
        },
        {
        "type": "checkbox",
        "id": "red_caption",
        "label": "Show red caption"
        },
        {
        "type": "header",
        "content": "Page content"
        },
        {
            "type": "range",
            "id": "item_per_row",
            "label": "Items per row",
            "min": 2,
            "max": 7,
            "step": 1,
            "default": 4
        },
        {
            "type": "range",
            "id": "mobile_item_row",
            "label": "Mobile items per row",
            "min": 2,
            "max": 4,
            "step": 1,
            "default": 2
        },
        {
            "type": "range",
            "id": "blog_posts_per_page",
            "label": "Items per page",
            "min": 1,
            "max": 50,
            "step": 1,
            "default": 12
        }
    ],
    "blocks" : [
        {
        "type": "image",
        "name": "Items",
        "settings": [
                {
                    "type": "image_picker",
                    "id": "item_image",
                    "label": "Image",
                    "info": "480 x 342px recommended"
                },
                {
                    "type": "text",
                    "id": "item_title",
                    "label": "Item title",
                    "default": "heading title"
                },
                {
                    "type": "video_url",
                    "id": "video",
                    "label": "Video link",
                    "accept": ["youtube", "vimeo"],
                    "default": "https://www.youtube.com/watch?v=_9VUPq3SxOc"
                },
                {
                    "type": "text",
                    "id": "tags",
                    "label": "Filter tags"
                }
            ]
        }
    ]
}
{% endschema %}