<style>
  #insta-feed{
    width:{{section.settings.feed_width}}%;
  }
  #insta-feed h2{
    font-size:{{section.settings.heading_size}}px;
  }
</style>

{% unless section.settings.html_area contains "feed-" %}
  <div class="container social-feeds-wrap">
    <div id="insta-feed" class="learfix placeholder-instagram"></div>
  </div>
{% endunless  %}

{%schema%}
  {
    "name":"Instafeed App",
    "settings":[
      {
        "type":"range",
        "id":"heading_size",
        "min":10,
        "max":50,
        "step":1,
        "unit":"px",
        "label":"Title Size",
        "default":20
      },
      {
        "type":"range",
        "id":"feed_width",
        "min":50,
        "max":100,
        "step":5,
        "unit":"%",
        "label":"Feed Width",
        "default":100
      },
      {
        "type":"html",
        "id":"html_area",
        "label":"Custom Code (optional)",
        "default":"<!-- -->",
        "info":"Save to see your changes"
      }
    ],
    "presets":[
      {
        "name":"Instafeed App",
        "category":"Instagram Feed"
      }
    ]
  }
{%endschema%}
