{% comment %}
** List of collections - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}
{% assign status = true %}
{% for block in section.blocks %}
    {% if block.settings.svg == blank  and block.settings.image == blank %}
      {% assign status = false %}    
    {% endif %}
{% endfor %}

{% if section.settings.status and status %}
  {% include 'icon-bar'%}  
{% endif %}

{% assign collections_per_row = section.settings.frontpage_collections_per_row %}

{% schema %}
{
  "name": "Icons",
  "class": "bar-section",
  "max_blocks": 4,
  "settings": [
    {
      "type": "select",
      "id": "bar_size",
      "label": "Bar size",
      "options": [
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "small",
          "label": "Small"
        }
      ]
    },
    {
      "type": "select",
      "id": "icon_color",
      "label": "Icon color",
      "options": [
        {
          "value": "invert",
          "label": "Invert color"
        },
        {
          "value": "origin_val",
          "label": "Origin color"
        }
      ]
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    },
    {
      "type": "checkbox",
      "id": "status",
      "label": "Show enable ?",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon"
        },
        {
          "type": "html",
          "id": "svg",
          "label": "Svg content"
        },
         {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Subscribe"
        }
      ]
    }
  ]
}
{% endschema %}
