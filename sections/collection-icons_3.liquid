{% comment %}
** List of collections - homepage partial **
- Draggable section
- Uses blocks
{% endcomment %}
{%- assign icons = 'ico_just_add_water.svg, ico_anytime.svg, ico_no_artificial_colors.svg'  | split: ", "-%}
{% include 'icon-bar', icons:icons %}

{% assign collections_per_row = section.settings.frontpage_collections_per_row %}

{% schema %}
{
  "name": "Collection icons 3",
  "class": "bar-section_3",
  "max_blocks": 3,
  "settings": [
    {
      "type": "select",
      "id": "bar_size",
      "label": "Bar size",
      "options": [
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "small",
          "label": "Small"
        }
      ]
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title color"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Icon"
        },
         {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Subscribe"
        }
      ]
    }
  ]
}
{% endschema %}
