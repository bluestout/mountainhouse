{% comment %}
** Single Products with image - homepage partial **
- Draggable section
{% endcomment %}
{% if section.blocks != blank %}
  {% include 'include-product-with-image' %}
{% endif %}


{% schema %}
{
  "name": "Products with image",
  "class": "product-image-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
      "info": "1024 x 682px recommended"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Products with image"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ]
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Button title"
    }, 
    {
      "type": "url",
      "id": "url",
      "label": "Button link"
    }
  ],
  "blocks":[{
    "type": "product",
    "name": "featured product",
    "settings": [
      {
        "type": "product",
        "id": "f_product",
        "label": "Featured product"
      }
    ]
  }],
  "presets": [{
    "name": "Products with image",
    "category": "Collection",
    "settings": {
      "image": "",
      "title": "Your Headline",
      "text_position": "center"
    }
  }]
}
{% endschema %}
