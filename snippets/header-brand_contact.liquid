
{% if section.settings.image %}
  {% assign image = section.settings.image %}
{% endif %}

{% style %}
  .page_banner_contact{
    background: url({{ image | img_url: '2000x' }}) no-repeat 50% 50% / cover;
  }
{% endstyle %}

<header class="banner center page_banner_contact dark-overlay-{{ section.settings.image_darken }}">
    {% comment %} {% include 'image-element', image: image, alt: collection.title, stretch_width: true, progressive: true %} {% endcomment %}
    {% if page.title != blank or page.content %}
      <div class="caption captionOverlay--true" style="background-color: {{section.settings.bg_color}};">
        
        <h2 class="headline" style="color: {{section.settings.title_color}};">{{ page.title }}</h2>
        <p>{{ page.content }}</p>
      </div>
    {% endif %}
</header>