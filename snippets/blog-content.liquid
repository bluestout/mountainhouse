{% assign items_per_row = section.settings.items_per_row %}

<div class="container blog-content">
    <div class="sixteen columns" data-blog-size="">
        {% for link in linklists.blogs.links %}
          {% assign blog = link.object %}
          {% assign articles = articles | concat: blog.articles %}
        {% endfor %}
        {% include 'include-featured-blog-content', type: 'block', back_to_image:true %}
    </div>
</div>
